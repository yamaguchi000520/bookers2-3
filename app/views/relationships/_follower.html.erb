<div class="row">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
        <td><%= user.name %></td>
        <td>
          <p>フォロー数:</p>     
          <%= link_to follows_user_path(user) do %>
            <%= following_users.count %>
        <% end %>
        </td>
        <td>
          <p>フォロー数:</p>     
          <%= link_to follower_user_path(user) do %>
            <%= follower_users.count %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
